<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itvsh_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/material_between" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itvsh_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/material_between"
            android:layout_toEndOf="@id/itvsh_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itvsh_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itvsh_name"
            android:layout_margin="@dimen/material_between"
            android:layout_toEndOf="@id/itvsh_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itvsh_race"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itvsh_gender"
            android:layout_margin="@dimen/material_between"
            android:layout_toEndOf="@id/itvsh_image" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>